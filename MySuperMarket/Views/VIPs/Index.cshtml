                area: '400px',
                offset: 'auto',
                content: $('#vip-add-form').html()
            });

        });
        // 工具条点击事件
        table.on('tool(vip_info_table)', function (obj) {
            var data = obj.data;
            if (obj.event === 'edit') { //修改

                layer.open({
                    type: 1,
                    title: '会员信息修改',
                    area: '400px',
                    offset: 'auto',
                    content: $('#vip-model').html(),
                    success: function () {
                        form.val('vip-update-form', data);
                    }

                });
                //同步更新缓存对应的值
